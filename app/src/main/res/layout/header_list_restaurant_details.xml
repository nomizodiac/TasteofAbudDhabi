<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/restaurantsBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/restaurants_banner" />

    <ImageView
        android:id="@+id/restaurantImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/restaurantsBanner"
        android:src="@drawable/rest_01"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/blackBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/restaurantImg"
        android:layout_marginTop="5dp"
        android:background="@color/grey">

    </RelativeLayout>

    <TextView
        android:id="@+id/greyBarTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/blackBarLayout"
        android:background="@drawable/greybar"
        android:gravity="center"
        android:text="@string/taste_of_abu_dhabi_heading"
        android:textColor="@color/colorOrangeTheme"
        android:textSize="25sp"></TextView>

    <RelativeLayout
        android:id="@+id/orangeBarLayout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/greyBarTxt"
        android:background="@color/colorOrangeTheme"></RelativeLayout>

    <ImageView
        android:id="@+id/leafDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orangeBarLayout"
        android:src="@drawable/leaf_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
